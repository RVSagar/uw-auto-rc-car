<?xml version="1.0"?>
<robot name="stoplight" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:property name="size" value="50.0" />

<link name="world" />
<joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
</joint>

<link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.01" length="1.0"/>
        </geometry>
        <material name="Black">
            <color rgba="1 0.0 1 1.0"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.01" length="1.0"/>
        </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10000"/>
      <inertia
        ixx="10000.0" ixy="0.0" ixz="0.0"
        iyy="10000.0" iyz="0.0"
        izz="10000.0"/>
    </inertial>
</link>

<joint name="light_joint" type="revolute">
    <origin xyz="0 0 1" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="light_link"/>
    <limit effort="100" velocity="100" />
</joint>

<link name="light_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10000"/>
      <inertia
        ixx="10000.0" ixy="0.0" ixz="0.0"
        iyy="10000.0" iyz="0.0"
        izz="10000.0"/>
    </inertial>
</link>

<joint name="red_light_joint" type="fixed">
    <origin xyz="0.01 0 0" rpy="0 0 0"/>
    <parent link="light_link"/>
    <child link="red_light_link"/>
</joint>

<link name="red_light_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.1" length="0.001"/>
        </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10000"/>
      <inertia
        ixx="10000.0" ixy="0.0" ixz="0.0"
        iyy="10000.0" iyz="0.0"
        izz="10000.0"/>
    </inertial>
</link>


<gazebo reference="base_link">
    <material>Gazebo/Black</material>
    <static>true</static>
</gazebo>

<gazebo reference="red_light_link">
    <material>Gazebo/Red</material>
</gazebo>

<gazebo>
    <static>true</static>
</gazebo>


</robot>